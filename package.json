{
    "name": "feuertiger",
    "private": true,
    "version": "1.0.0",
    "author": "",
    "license": "MIT",
    "scripts": {
        "linkdist": "node ./scripts/linkdist.js --no-private",
        "format": "prettier ./**/*.ts ./**/*.js ./**/*.tsx ./**/*.json ./**/*.graphql ./**/*.yml --write",
        "lint": "eslint ./**/*.{js,ts,tsx} --fix",
        "test": "lerna run test --no-private --stream",
        "build": "lerna run build --no-private --stream",
        "e2e": "lerna run e2e --stream",
        "dev:db": "/etc/init.d/postgresql start",
        "dev": "yarn linkdist && yarn dev:db && lerna run dev --no-private --stream --parallel"
    },
    "packages": [
        "packages/*",
        "services/*",
        "deployments/firebase/functions",
        "e2e"
    ],
    "workspaces": [
        "packages/*",
        "services/*",
        "deployments/firebase/functions",
        "e2e"
    ],
    "dependencies": {
        "@lerna/package-graph": "3.18.5",
        "@lerna/project": "3.18.0",
        "@typescript-eslint/eslint-plugin": "2.33.0",
        "@typescript-eslint/parser": "2.33.0",
        "babel-eslint": "10.1.0",
        "dotenv": "8.2.0",
        "eslint": "7.0.0",
        "eslint-config-airbnb": "18.1.0",
        "eslint-config-airbnb-typescript": "7.2.1",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-prettier": "3.1.3",
        "eslint-plugin-react": "7.20.0",
        "eslint-plugin-react-hooks": "4.0.0",
        "lerna": "3.20.2",
        "prettier": "2.0.5",
        "yarn": "1.22.4"
    }
}
