{
    "name": "feuertiger",
    "private": true,
    "version": "1.0.0",
    "author": "Michael Thanei",
    "license": "MIT",
    "scripts": {
        "init": "feuertiger init",
        "format": "feuertiger format",
        "build": "lerna run build --no-private --stream",
        "linkdist": "feuertiger linkdist",
        "lint": "feuertiger lint",
        "test": "lerna run test --no-private --stream",
        "e2e": "lerna run e2e --stream",
        "dev": "feuertiger dev",
        "dev:docker": "docker-compose up --build",
        "clean:db": "su - postgres -c 'psql -U feuertiger --command \"DROP DATABASE IF EXISTS feuertiger;\"'",
        "clean:node_modules": "git clean -fdx -e !node_modules",
        "clean:all": "yarn clean:db && git clean -fdX"
    },
    "packages": [
        "packages/*",
        "services/*",
        "infrastructure",
        "deployment",
        "config",
        "cli"
    ],
    "workspaces": [
        "packages/*",
        "services/*",
        "infrastructure",
        "deployment",
        "config",
        "cli"
    ],
    "dependencies": {
        "@lerna/package-graph": "3.18.5",
        "@lerna/project": "3.18.0",
        "@typescript-eslint/eslint-plugin": "3.6.1",
        "@typescript-eslint/parser": "2.33.0",
        "babel-eslint": "10.1.0",
        "dotenv": "8.2.0",
        "eslint": "7.0.0",
        "eslint-config-airbnb-typescript": "9.0.0",
        "eslint-config-airbnb-typescript-prettier": "3.1.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.20.3",
        "eslint-plugin-react-hooks": "4.0.8",
        "lerna": "3.20.2",
        "prettier": "2.0.5",
        "yarn": "1.22.4"
    }
}
